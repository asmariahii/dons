<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.ComboBox?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.SupprimerDonsController"
            prefWidth="400" prefHeight="300">

    <children>
        <ComboBox fx:id="userComboBox" promptText="Sélectionner un utilisateur" layoutX="14" layoutY="20"/>

        <Label layoutX="14" layoutY="50" text="ID du don à supprimer:"/>
        <TextField fx:id="idDonField" promptText="ID du don" layoutX="14" layoutY="70"/>

        <Label layoutX="14" layoutY="100" text="Nombre de points à supprimer:"/>
        <TextField fx:id="donPointsField" promptText="Nombre de points" layoutX="14" layoutY="120"/>

        <Button text="Supprimer Don" onAction="#handleSupprimerDon" layoutX="14" layoutY="160"/>
    </children>
</AnchorPane>
